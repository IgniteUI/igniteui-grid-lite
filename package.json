{
  "name": "igniteui-grid-lite-workspace",
  "version": "0.0.0",
  "private": true,
  "description": "Web component data grid following open-wc recommendations",
  "keywords": [
    "lit",
    "web-component",
    "lit-element"
  ],
  "license": "MIT",
  "author": "Infragistics",
  "repository": {
    "url": "https://github.com/igniteui/igniteui-grid-lite"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "analyze": "cem analyze --litelement --globs \"src/**/*.{js,ts}\" --exclude \"src/styles/**/*\"",
    "build": "npm run analyze && node scripts/build.js && npm run typedoc",
    "build:tsc": "tsc",
    "dev:vite": "vite build",
    "format": "biome check --fix && npm run format:stylelint",
    "format:stylelint": "stylelint \"src/**/*.{scss,css}\" --fix --allow-empty-input",
    "lint": "biome lint && npm run lint:stylelint",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\" --allow-empty-input",
    "preview:vite": "vite preview",
    "sass:watch": "node scripts/watch-styles.js",
    "start": "concurrently -k -r \"npm:sass:watch\" \"npm:vite\"",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "typedoc": "typedoc",
    "vite": "vite",
    "prepare": "husky"
  },
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx}": [
      "biome check --fix --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@lit-labs/virtualizer": "^2.1.1",
    "@lit/context": "^1.1.6",
    "igniteui-webcomponents": "~7.0.0",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@web/dev-server-esbuild": "^1.0.5",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "igniteui-theming": "^25.0.1",
    "lint-staged": "^16.2.7",
    "node-watch": "^0.7.4",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "sass-embedded": "^1.97.3",
    "sinon": "^21.0.1",
    "stylelint": "^17.3.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^7.0.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "customElements": "custom-elements.json"
}
